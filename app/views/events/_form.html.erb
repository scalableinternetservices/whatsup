<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <% @event.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
          <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name,  class:"form-control"%>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class:"form-control"%>
  </div>
  <div class="field">
    <%= f.label :event_categories %><br>
    <% cats = [] %>
    <% @event.event_categories.each do |cat|%>
	<% cats.push(cat.category) %>
	<% end %>
	<%= f.select :event_categories, options_for_select((list_categories), @event ? cats : "") , 
		{}, { :multiple => true, :size => list_categories.length } %>
  </div>

  <div class="field">
   <%= f.file_field :image%>    
    </div>

  <div class="actions">
    <%= f.submit class:"btn btn-success"%>
  </div>
<% end %>

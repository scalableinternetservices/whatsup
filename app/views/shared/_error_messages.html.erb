
<% if @user && @user.errors.any? %>
    <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </div>
  <% end %>

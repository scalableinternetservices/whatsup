<div class="container documents">
	<div class="row">
		<div class="col-md-6 col-sm-offset-3">
			<h2>Events Near You</h2>
			
			<%= form_tag user_path, :method => :get do %>
			<div class="col-md-2 pull-right">
				<%= submit_tag "Search Nearby", :name => nil, class:"btn btn-xs"%>
			</div>
			<div class="col-md-4 pull-right">
				<%= text_field_tag :search, params[:search] %>
			</div>
			<% end %>
			
			<div class="col-md-4" >
				<th>Your current location:</th>
				<%= @result.latitude %>
				<%= @result.longitude %>
			</div>
			<br> <br> <br> <br>
			<% @near_me.each do |e| %>
			<div id="event<%= e.id %>">
				<%= render partial: "eventSingle", locals: { event: e } %>
			</div>
			<% end %>

			<% if !@near_me.present? %>
			
			There are no events near you. <br>
			Try searching for a different location or <%=link_to 'create your own event.', new_event_path, method: :get %>
			
			<% end %>

			<br />
			
		</div>
	</div>
</div>
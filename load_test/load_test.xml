<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-24-173-1.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>

    <!--
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
  -->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="whatsup_load_default" probability="100" type="ts_http">
      
      <transaction name="first_load">
        <request>
          <http url='/' version='1.1' method='GET'></http>
        </request>
      </transaction>

      <thinktime value="2" random="true"></thinktime>
      
      <transaction name="create_account">
        <setdynvars sourcetype='random_number' start='1000' end='9999999'>
          <var name='random_email_id'/>
        </setdynvars>
        
        <dyn_variable name="created_user_id" re="[Ll]ocation:http://.*/users/(.*)\r"/>
      
        <request subst="true">
          <http 
            url='/users' 
            version='1.1' 
            method='POST'
            contents='user%5Bname%5D=anothertest&amp;user%5Bemail%5D=%%_random_email_id%%%40gmail.com&amp;user%5Bpassword%5D=password&amp;user%5Bpassword_confirmation%5D=password&amp;commit=Create+Account'>
          </http>
        </request>
      </transaction> 

      <thinktime value="2" random="true"></thinktime>
      
      <!-- Uncomment the following to debug print your dynamic variables  --> 
      <setdynvars sourcetype="eval" code="fun( {Pid, DynVars} ) ->
        io:format([126, $p, 126, $n, 126, $n], [DynVars]),
        ok end.">
        <var name="dump" />
      </setdynvars>
     
      <!-- Create some events -->
      <!--
      <thinktime value="2" random="true"></thinktime>
      <transaction name="create_account">

      </transaction>
      -->
      
      <dyn_variable name="created_event_id" re="[Ll]ocation:http://.*/events/(.*)\r"/>
      
      
      <transaction name="comment_on_event">
        <request subst="true"">
          <http
            url='/users/createComment'
            version='1.1'
            method='POST'
            contents='comment%5Bmessage%5D=comment&amp;comment%5Buser_id%5D=%%_created_user_id%%8&amp;comment%5B%5D=%%_created_event_id%%'>
          </http>
        </request>
      </transaction>
      
      <transaction name="attend_event">
        <request subst="true">
          <http
            url='/users/attendEvent/%%_created_event_id%%'
            version='1.1'
            method='POST'
            contents=''>
          </http>
      </transaction>
      
      <transaction name="leave_event">
        <request subst="true">
          <http
            url='users/leaveEvent/%%_created_event_id%%'
            version='1.1'
            method='POST'
            contents=''>
          </http>
        </request>
      </transaction>
    </session>
  </sessions>
</tsung>
<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-11-230-185.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="2" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>

    <!--
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
  -->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="whatsup_load_default" probability="100" type="ts_http">
      
      <transaction name="first_load">
        <request>
          <http url='/' version='1.1' method='GET'></http>
        </request>
      </transaction>

      <thinktime value="2" random="true"></thinktime>
      
      <transaction name="create_account">
        <setdynvars sourcetype='random_number' start='1000' end='9999999'>
          <var name='random_email_id'/>
        </setdynvars>
              
        <request subst="true">
          <http 
            url='/users' 
            version='1.1' 
            method='POST'
            contents='user%5Bname%5D=anothertest&amp;user%5Bemail%5D=%%_random_email_id%%%40gmail.com&amp;user%5Bpassword%5D=password&amp;user%5Bpassword_confirmation%5D=password&amp;commit=Create+Account'>
          </http>
        </request>
        
        <request subst="true">
          <dyn_variable name="created_user_id" re="[Ll]ocation: http://.*/users/(.*)\r"/>
          <http 
            url='/users' 
            version='1.1' 
            method='GET'>
          </http>
        </request>
      </transaction> 

      <thinktime value="2" random="true"></thinktime>

      <!-- create an event with an image 
      MAKE SURE picnic1.jpg is in the same folder as load_test.xml or event creations won't work!!!
        -->
      <transaction name="create_event">
        <setdynvars sourcetype="eval"
          code='fun({Pid,DynVars})-> [[13, 10]] end.'>
          <var name="nl" />
        </setdynvars>

        <setdynvars sourcetype="random_number" start="1000" end="9999999">
          <var name="random_event_id" />
        </setdynvars>

        <!-- event with image -->
        <!-- xml doesn't support two consecutive dashes in comments so need to use <? ignore ?> tag
        to comment out the event creation code -->
          <setdynvars sourcetype="eval"
          code='fun({Pid,DynVars})->
          {ok, Bin} = file:read_file("picnic1.jpg"),
          Bin
          end.'>
          <var name="attached_file" />
        </setdynvars>

        <request subst="true">
          <dyn_variable name="created_event_id" re="[Ll]ocation: http://.*/events/(.*)\r"/>
          <http
            url='/events'
            version='1.1'
            method='POST'
            content_type='multipart/form-data; boundary=----FormBoundary'
            contents='------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[name]"%%_nl%%%%_nl%%Event%%_random_event_id%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[location]"%%_nl%%%%_nl%%Los Angeles%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(1i)]"%%_nl%%%%_nl%%2015%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(2i)]"%%_nl%%%%_nl%%6%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(3i)]"%%_nl%%%%_nl%%27%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(4i)]"%%_nl%%%%_nl%%02%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(5i)]"%%_nl%%%%_nl%%00%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(1i)]"%%_nl%%%%_nl%%2015%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(2i)]"%%_nl%%%%_nl%%6%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(3i)]"%%_nl%%%%_nl%%27%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(4i)]"%%_nl%%%%_nl%%03%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(5i)]"%%_nl%%%%_nl%%00%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[description]"%%_nl%%%%_nl%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[event_categories][]"%%_nl%%%%_nl%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[image]"; filename="picnic1.png"%%_nl%%Content-Type: image/jpeg%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Create Event%%_nl%%------FormBoundary--%%_nl%%%%_nl%%'>
          </http>
        </request>
        

        <!-- uncomment this if you want an event without image and comment the "event with images" code above
         xml doesn't support two consecutive dashes in comments so need to use <? ignore ?> tag
        to comment out the event creation code -->
        <?ignore
         <request subst="true">
          <dyn_variable name="created_event_id" re="[Ll]ocation: http://.*/events/(.*)\r"/>
          <http
            url='/events'
            version='1.1'
            method='POST'
            content_type='multipart/form-data; boundary=----FormBoundary'
            contents='------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[name]"%%_nl%%%%_nl%%Event%%_random_event_id%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[location]"%%_nl%%%%_nl%%Los Angeles%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(1i)]"%%_nl%%%%_nl%%2015%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(2i)]"%%_nl%%%%_nl%%6%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(3i)]"%%_nl%%%%_nl%%27%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(4i)]"%%_nl%%%%_nl%%02%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[start_time(5i)]"%%_nl%%%%_nl%%00%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(1i)]"%%_nl%%%%_nl%%2015%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(2i)]"%%_nl%%%%_nl%%6%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(3i)]"%%_nl%%%%_nl%%27%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(4i)]"%%_nl%%%%_nl%%03%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[end_time(5i)]"%%_nl%%%%_nl%%00%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[description]"%%_nl%%%%_nl%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[event_categories][]"%%_nl%%%%_nl%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="event[image]"; filename=""%%_nl%%Content-Type: application/octet-stream%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Create Event%%_nl%%------FormBoundary--%%_nl%%%%_nl%%'>
          </http>
        </request>
        ?>
      </transaction> 

      <thinktime value="2" random="true"></thinktime>
 
     <transaction name="comment_on_event">
        <request subst="true">
          <http
            url='/users/createComment'
            version='1.1'
            method='POST'
            contents='comment%5Bmessage%5D=comment&amp;comment%5Buser_id%5D=%%_created_user_id%%&amp;comment%5B%5D=%%_created_event_id%%'>
          </http>
        </request>
      </transaction>
            
      <transaction name="attend_event">
        <request subst="true">
          <http
            url='/users/attendEvent/%%_created_event_id%%'
            version='1.1'
            method='POST'
            contents=''>
          </http>
        </request>
      </transaction>
      
      <transaction name="leave_event">
        <request subst="true">
          <http
            url='/users/leaveEvent/%%_created_event_id%%'
            version='1.1'
            method='POST'
            contents=''>
          </http>
        </request>
      </transaction>
      
      <!-- searching here? -->
      
      <transaction name="delete_event">
        <request subst="true">
          <http
            url='/events/%%_created_event_id%%'
            version='1.1'
            method='POST'
            contents='_method=DELETE'>
            </http>
        </request>
      </transaction>
      
      <transaction name="delete_user">
        <request subst="true">
          <http
            url='/users/%%_created_user_id%%'
            version='1.1'
            method='POST'
            contents='_method=DELETE'
            >
            </http>
        </request>
      </transaction>

      <!-- Uncomment the following to debug print your dynamic variables  --> 
       <setdynvars sourcetype="eval" code='fun( {Pid, DynVars} ) ->
        io:format([126, $p, 126, $n, 126, $n],  [lists:keydelete(attached_file, 1, DynVars)] ),
        ok end.'>
        <var name="dump" />
      </setdynvars>
      
    </session>
  </sessions>
</tsung>
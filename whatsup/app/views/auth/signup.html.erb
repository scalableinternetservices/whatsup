<h1>Create an Account</h1>

<%= form_for :user, url: users_path do |u| %>
  <%= render 'shared/error_messages' %>

  <p>
    <%= u.label "Name" %><br>
    <%= u.text_field :name %>
  </p>
 
  <p>
    <%= u.label "Email" %><br>
    <%= u.text_field :email %>
  </p>
 
  <p>
    <%= u.label "Password" %><br>
    <%= u.text_field :password, type: "password" %>
  </p>

  <p>
    <%= u.label "Confirm Password" %><br>
    <%= u.text_field :password_confirmation, type: "password" %>
  </p>

  <p>
    <%= u.submit "Create Account" %>
  </p>
<% end %>
